{
    "opts": {
        "destination": "./docs/",
        "recurse": true,
        "encoding": "utf8",
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark"
        }
    },
    "source": {
        "include": [".", "./README.md"],
        "excludePattern": "(node_modules/|docs|out)"
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    },
    "templates": {
        "default": {
            "outputSourceFiles": false
        }
    }
}
